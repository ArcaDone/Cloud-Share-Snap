<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CloudShareSnap" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.SplashScreenApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#FF6CA6CD</item>
    </style>

    <!-- Legacy Splash Screen Theme -->
    <style name="LegacySplashTheme" parent="Theme.CloudShareSnap">
        <item name="android:windowBackground">@drawable/legacy_splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Splash Screen Theme (pre Android 12) -->
    <style name="Theme.CloudShareSnap.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">#FF6CA6CD</item>
        <!--        Should be better set SVG icon-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/legacy_splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.CloudShareSnap</item>
        <item name="splashScreenIconSize">60dp</item>
    </style>

</resources>